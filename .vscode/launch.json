{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "cmake-debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/default/bin/${input:executableName}",
            "args": [
                "<",
                "input.txt",
                ">",
                "output.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "CMake Build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/lldb"
        }
    ],
    "inputs": [
        {
            "id": "executableName",
            "type": "promptString",
            "description": "Enter the name of the executable",
            "default": "A-2309"
        }
    ]
}